---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Financial Anonymizer">
  <div class="w-full max-w-7xl mx-auto">
    <!-- Workflow Stepper -->
    <div id="workflow-stepper" class="mb-6 rounded-2xl bg-navy-900/35 backdrop-blur-md border border-navy-800/50 px-4 sm:px-6 py-4">
      <div class="flex items-center justify-between gap-3">
        <div class="min-w-0">
          <div class="text-sm font-semibold text-slate-100 tracking-tight">Workflow</div>
          <div class="text-[11px] text-slate-400">Select & Upload → Review → Export or AI analysis.</div>
        </div>
        <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
          <!-- Step 1: Select & Upload -->
          <div id="wf-step-1" class="wf-step flex items-center gap-2 px-3 py-1.5 rounded-full border border-navy-800/60 bg-navy-950/30 transition-all">
            <span class="wf-dot w-5 h-5 rounded-full bg-navy-800/70 border border-navy-700/60 flex items-center justify-center transition-all">
              <span class="wf-num text-[11px] font-bold text-slate-300">1</span>
              <svg class="wf-check hidden w-3 h-3 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span class="wf-label text-xs font-semibold text-slate-200 hidden sm:inline">Select & Upload</span>
          </div>
          <!-- Connector 1-2 -->
          <div id="wf-conn-1" class="wf-connector w-8 sm:w-10 h-px bg-navy-800/70 transition-all"></div>
          <!-- Step 2: Review -->
          <div id="wf-step-2" class="wf-step flex items-center gap-2 px-3 py-1.5 rounded-full border border-navy-800/60 bg-navy-950/20 opacity-70 transition-all">
            <span class="wf-dot w-5 h-5 rounded-full bg-navy-800/50 border border-navy-700/50 flex items-center justify-center transition-all">
              <span class="wf-num text-[11px] font-bold text-slate-400">2</span>
              <svg class="wf-check hidden w-3 h-3 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span class="wf-label text-xs font-semibold text-slate-300 hidden sm:inline">Review</span>
          </div>
          <!-- Connector 2-3 -->
          <div id="wf-conn-2" class="wf-connector w-8 sm:w-10 h-px bg-navy-800/60 transition-all"></div>
          <!-- Step 3: Export/AI -->
          <div id="wf-step-3" class="wf-step flex items-center gap-2 px-3 py-1.5 rounded-full border border-navy-800/60 bg-navy-950/20 opacity-60 transition-all">
            <span class="wf-dot w-5 h-5 rounded-full bg-navy-800/40 border border-navy-700/40 flex items-center justify-center transition-all">
              <span class="wf-num text-[11px] font-bold text-slate-500">3</span>
              <svg class="wf-check hidden w-3 h-3 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span class="wf-label text-xs font-semibold text-slate-400 hidden sm:inline">Export/AI</span>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-[minmax(400px,_480px)_1fr] gap-10 lg:gap-6">
    <!-- ═════════════════════════════════════════════════════════════════ -->
    <!-- LEFT PANEL: INPUT & CONFIGURATION -->
    <!-- ═════════════════════════════════════════════════════════════════ -->
    <section class="flex flex-col gap-6">
      
      <!-- Step 1: Clean Up Mode (unified panel like Review Mode) -->
      <div class="bg-navy-900/50 backdrop-blur-md border border-navy-800/50 rounded-xl shadow-xl overflow-hidden flex flex-col">
        
        <!-- Header -->
        <div class="flex-shrink-0 px-4 sm:px-6 pt-6 pb-5 border-b border-navy-700/50">
          <div class="flex items-center gap-3">
            <div class="flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-brand-500/30 to-cyan-500/20 border border-brand-500/30">
              <span class="text-lg sm:text-xl font-bold text-brand-400">1</span>
            </div>
            <div>
              <div class="flex items-baseline gap-3 flex-wrap">
                <h2 class="text-xl sm:text-2xl font-bold text-white tracking-tight">Clean Up Mode</h2>
                <!-- File Type Selector -->
                <div class="flex items-center relative">
                  <button id="btn-file-type" class="px-3 py-1.5 text-xs font-medium bg-navy-800/60 hover:bg-navy-800/80 text-slate-200 hover:text-white rounded-lg border border-navy-700/60 hover:border-navy-600/80 transition-all flex items-center gap-1.5 shadow-sm whitespace-nowrap">
                    <span id="file-type-label">Bank Statement</span>
                    <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="transition-transform flex-shrink-0">
                      <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                  </button>
                  <!-- File Type Dropdown -->
                  <div id="file-type-menu" class="hidden absolute top-full right-0 mt-2 w-48 bg-navy-900/95 backdrop-blur-xl border border-navy-700/50 rounded-xl shadow-2xl overflow-hidden z-50 animate-fadeIn">
                    <button data-file-type="bank_statement" class="file-type-option w-full px-4 py-2.5 text-left hover:bg-white/5 transition-colors border-b border-navy-800/30 bg-white/5">
                      <div class="text-sm font-medium text-white">Bank Statement</div>
                      <div class="text-[11px] text-slate-400 mt-0.5">Standard bank transactions</div>
                    </button>
                    <button data-file-type="credit_card" class="file-type-option w-full px-4 py-2.5 text-left hover:bg-white/5 transition-colors border-b border-navy-800/30">
                      <div class="text-sm font-medium text-slate-200">Credit Card</div>
                      <div class="text-[11px] text-slate-400 mt-0.5">Credit card statements</div>
                    </button>
                    <button data-file-type="expense_report" class="file-type-option w-full px-4 py-2.5 text-left hover:bg-white/5 transition-colors border-b border-navy-800/30">
                      <div class="text-sm font-medium text-slate-200">Expense Report</div>
                      <div class="text-[11px] text-slate-400 mt-0.5">Business expense tracking</div>
                    </button>
                    <button data-file-type="transaction_csv" class="file-type-option w-full px-4 py-2.5 text-left hover:bg-white/5 transition-colors">
                      <div class="text-sm font-medium text-slate-200">Transaction CSV</div>
                      <div class="text-[11px] text-slate-400 mt-0.5">Generic transaction data</div>
                    </button>
                  </div>
                </div>
              </div>
              <p class="text-xs sm:text-sm text-slate-400 mt-0.5">Anonymize Your Financial Data</p>
            </div>
          </div>
        </div>

        <!-- Source Data Header (Beautified) -->
        <div class="flex-shrink-0 flex items-center justify-between px-4 sm:px-6 py-3 border-b border-navy-800/40 bg-navy-950/30">
          <div class="flex items-center gap-2.5">
            <!-- Planned Removals Info Button -->
            <button id="btn-plan-info" class="w-7 h-7 rounded-full bg-gradient-to-br from-brand-500/30 to-purple-500/30 border border-brand-400/50 hover:border-brand-400 flex items-center justify-center text-xs font-bold text-brand-300 hover:text-brand-200 transition-all hover:scale-110 shadow-sm shadow-brand-500/20 flex-shrink-0" title="View planned removals">
              P
            </button>
            <div>
              <div id="source-filename" class="text-xs font-medium text-slate-300">source.csv</div>
              <div class="text-[10px] text-slate-500">Paste or upload your data</div>
            </div>
          </div>
          <input id="file-input" type="file" accept=".csv,.xlsx,.xls,.pdf" class="hidden" />
          <button id="btn-upload" class="flex items-center gap-2 px-4 py-2 text-xs font-medium bg-brand-600/20 hover:bg-brand-600/30 text-brand-300 hover:text-brand-200 rounded-lg border border-brand-500/30 hover:border-brand-500/50 transition-all">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="17 8 12 3 7 8"></polyline>
              <line x1="12" y1="3" x2="12" y2="15"></line>
            </svg>
            Upload File
          </button>
        </div>

        <!-- Textarea -->
        <div id="dropzone" class="relative flex-1 min-h-[300px]">
          <textarea
            id="input-csv"
            class="w-full h-full min-h-[300px] bg-transparent p-4 font-mono text-xs text-slate-300 placeholder:text-slate-600 focus:outline-none resize-none"
            placeholder="// Paste your CSV or JSON transaction data here..."
            spellcheck="false"
          ></textarea>

          <div id="drop-overlay" class="hidden absolute inset-0 bg-navy-950/90 backdrop-blur-sm border-2 border-dashed border-brand-500/60 flex flex-col items-center justify-center text-brand-400 pointer-events-none z-10 m-2 rounded-xl">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="mb-3 animate-bounce">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="17 8 12 3 7 8"></polyline>
              <line x1="12" y1="3" x2="12" y2="15"></line>
            </svg>
            <p class="font-semibold text-sm">Drop file here</p>
          </div>
        </div>
      </div>

      <!-- Custom Term Removal (Collapsible) -->
      <details id="configuration-section" class="group bg-navy-900/50 backdrop-blur-md border border-navy-800/50 rounded-xl shadow-xl overflow-hidden">
        <summary class="cursor-pointer select-none px-5 py-4 hover:bg-navy-900/70 transition-colors flex items-center justify-between">
          <div class="flex items-center gap-2">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-slate-400 transition-transform group-open:rotate-90">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
            <span class="text-sm font-semibold text-slate-100">Custom Term Removal</span>
          </div>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-slate-500">
            <circle cx="12" cy="12" r="3"></circle>
            <path d="M12 1v6m0 6v6M4.22 4.22l4.24 4.24m7.08 7.08l4.24 4.24M1 12h6m6 0h6M4.22 19.78l4.24-4.24m7.08-7.08l4.24-4.24"></path>
          </svg>
        </summary>

        <div class="px-5 pb-5 space-y-4 animate-fadeIn">
          <!-- Custom Remove Terms -->
          <div>
            <label class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-2 block">Custom Remove Terms</label>
            <div class="flex gap-2 mb-2">
              <input
                id="custom-term-input"
                type="text"
                placeholder="e.g. 'John Doe' or '12345'"
                class="flex-1 bg-navy-950/30 border border-navy-800/50 rounded-lg px-3 py-2 text-xs text-slate-200 placeholder:text-slate-600 focus:ring-2 focus:ring-brand-500/40 focus:border-brand-500/40 focus:outline-none"
              />
              <button id="btn-add-term" class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-300 text-xs font-semibold rounded-lg border border-red-500/30 transition-colors">
                Remove
              </button>
            </div>
            <div id="custom-terms-chips" class="flex flex-wrap gap-2 min-h-[32px]"></div>
          </div>

          <!-- PDF Controls (conditional) -->
          <div id="pdf-controls" class="hidden p-4 bg-navy-950/30 rounded-lg border border-navy-800/50">
            <div class="flex items-center justify-between mb-3">
              <div class="text-xs font-semibold text-slate-300">PDF Page Range</div>
              <div id="pdf-ocr-badge" class="hidden text-[10px] font-semibold px-2 py-0.5 rounded bg-purple-500/20 text-purple-300 border border-purple-500/30">
                OCR Mode
              </div>
            </div>
            <div class="flex items-center gap-3">
              <input id="pdf-page-start" type="number" min="1" class="w-20 bg-navy-950/40 border border-navy-800/50 rounded-lg px-2 py-1.5 text-xs text-slate-200" placeholder="Start" />
              <span class="text-xs text-slate-500">to</span>
              <input id="pdf-page-end" type="number" min="1" class="w-20 bg-navy-950/40 border border-navy-800/50 rounded-lg px-2 py-1.5 text-xs text-slate-200" placeholder="End" />
              <button id="btn-preflight-rerun" class="ml-auto text-xs bg-navy-950/40 hover:bg-navy-950/70 border border-navy-800/50 text-slate-200 px-3 py-1.5 rounded-lg transition-colors">
                Re-scan
              </button>
            </div>
            <div id="pdf-meta" class="mt-2 text-[10px] font-mono text-slate-500">—</div>
          </div>
        </div>
      </details>

      <!-- Anonymize Button -->
      <button id="btn-process" disabled class="w-full py-4 bg-gradient-to-r from-brand-500 to-cyan-500 hover:from-brand-600 hover:to-cyan-600 disabled:from-slate-700 disabled:to-slate-700 disabled:cursor-not-allowed text-white font-bold text-sm rounded-xl shadow-lg hover:shadow-xl transition-all disabled:opacity-50 flex items-center justify-center gap-3 group">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="group-disabled:opacity-50">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path>
        </svg>
        <span id="btn-process-text">Anonymize Data</span>
      </button>

      <!-- Clear Button -->
      <button id="btn-clear" class="w-full py-2 text-xs text-slate-500 hover:text-slate-300 transition-colors flex items-center justify-center gap-2">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="3 6 5 6 21 6"></polyline>
          <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
        </svg>
        Clear All
      </button>
    </section>

    <!-- ═════════════════════════════════════════════════════════════════ -->
    <!-- RIGHT PANEL: OUTPUT & ANALYSIS -->
    <!-- ═════════════════════════════════════════════════════════════════ -->
    <section class="flex flex-col gap-6">
      
      <!-- Output Panel -->
      <div class="bg-navy-900/50 backdrop-blur-md border border-navy-800/50 rounded-xl shadow-xl overflow-hidden flex flex-col" style="height: calc(100vh - 180px); min-height: 600px;">

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- STEP 2: REVIEW MODE - Bold Section Header -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        
        <!-- Review Mode Title (Section Header) -->
        <div class="flex-shrink-0 px-4 sm:px-6 pt-6 pb-5 border-b border-navy-700/50">
          <div class="flex items-center gap-3">
            <div class="flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-brand-500/30 to-cyan-500/20 border border-brand-500/30">
              <span class="text-lg sm:text-xl font-bold text-brand-400">2</span>
            </div>
            <div>
              <h2 class="text-xl sm:text-2xl font-bold text-white tracking-tight">Review Mode</h2>
              <p class="text-xs sm:text-sm text-slate-400 mt-0.5">Inspect, refine, and export your cleaned data</p>
            </div>
          </div>
        </div>

        <!-- Format Selector + Detail Level (single row, responsive) -->
        <div class="flex-shrink-0 px-4 sm:px-6 pb-4">
          <div class="flex flex-col sm:flex-row sm:items-center gap-3">
            <!-- Format Pills -->
            <div class="flex items-center gap-1 p-1 bg-navy-950/60 rounded-xl border border-navy-800/40 overflow-x-auto">
              <button data-format="markdown" class="format-tab px-3 py-2 text-xs font-medium rounded-lg transition-all whitespace-nowrap bg-white/10 text-white shadow-sm">
                Markdown
              </button>
              <button data-format="json" class="format-tab px-3 py-2 text-xs font-medium rounded-lg transition-all whitespace-nowrap text-slate-400 hover:text-white hover:bg-white/5">
                JSON
              </button>
              <button data-format="csv" class="format-tab px-3 py-2 text-xs font-medium rounded-lg transition-all whitespace-nowrap text-slate-400 hover:text-white hover:bg-white/5">
                CSV
              </button>
              <button data-format="text" class="format-tab px-3 py-2 text-xs font-medium rounded-lg transition-all whitespace-nowrap text-slate-400 hover:text-white hover:bg-white/5">
                Text
              </button>
              <button data-format="storyline" class="format-tab px-3 py-2 text-xs font-medium rounded-lg transition-all whitespace-nowrap text-slate-400 hover:text-white hover:bg-white/5">
                Summary
              </button>
            </div>

            <!-- Detail Level -->
            <div class="relative ml-auto">
              <button id="profile-btn" class="flex items-center gap-2 px-3 py-2 bg-navy-950/60 hover:bg-navy-900/80 border border-navy-800/40 rounded-xl text-xs font-medium text-slate-300 transition-all">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-slate-500">
                  <circle cx="12" cy="12" r="3"></circle>
                  <path d="M12 1v6m0 6v6M4.22 4.22l4.24 4.24m7.08 7.08l4.24 4.24M1 12h6m6 0h6M4.22 19.78l4.24-4.24m7.08-7.08l4.24-4.24"></path>
                </svg>
                <span id="profile-label">Minimal</span>
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="opacity-40">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </button>
              
              <div id="profile-menu" class="hidden absolute top-full right-0 mt-2 w-56 bg-navy-900/95 backdrop-blur-xl border border-navy-700/50 rounded-xl shadow-2xl overflow-hidden z-50 animate-fadeIn">
                <button data-profile="ai_safe" class="profile-option w-full px-4 py-3 text-left hover:bg-white/5 transition-colors border-b border-navy-800/30 bg-white/5">
                  <div class="text-sm font-medium text-white">Minimal</div>
                  <div class="text-[11px] text-slate-400 mt-0.5">Best for AI — clean & focused</div>
                </button>
                <button data-profile="audit" class="profile-option w-full px-4 py-3 text-left hover:bg-white/5 transition-colors border-b border-navy-800/30">
                  <div class="text-sm font-medium text-slate-200">Standard</div>
                  <div class="text-[11px] text-slate-400 mt-0.5">Balanced for review & export</div>
                </button>
                <button data-profile="debug" class="profile-option w-full px-4 py-3 text-left hover:bg-white/5 transition-colors">
                  <div class="text-sm font-medium text-slate-200">Detailed</div>
                  <div class="text-[11px] text-slate-400 mt-0.5">Full metadata for debugging</div>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Cleanup Report Bar (appears after processing) -->
        <div id="findings-bar" class="hidden flex-shrink-0 px-4 sm:px-6 pb-3">
          <div class="flex items-center gap-3 p-3 bg-gradient-to-r from-green-500/10 to-emerald-500/5 rounded-xl border border-green-500/20">
            <!-- Label + Info -->
            <div class="flex items-center gap-2">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-400 flex-shrink-0">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <div class="text-[11px] font-semibold text-green-300 uppercase tracking-wide whitespace-nowrap">Removed</div>
              <!-- Info tooltip -->
              <button id="findings-info-btn" type="button" class="relative group" title="What do these mean?">
                <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-slate-500 hover:text-slate-300 transition-colors">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                  <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
                <!-- Tooltip popup (hidden by default, shown on hover/click) -->
                <div id="findings-tooltip" class="hidden absolute left-0 bottom-full mb-2 w-56 p-3 bg-navy-900 border border-navy-700 rounded-lg shadow-xl text-left z-50">
                  <div class="text-[11px] text-slate-300 space-y-2">
                    <div>
                      <strong class="text-red-300">Sensitive data removed</strong>
                      <p class="text-[10px] text-slate-400 mt-1">Phone numbers, emails, SSNs, URLs, and addresses have been replaced with safe placeholders.</p>
                    </div>
                    <div class="text-[10px] text-slate-500 pt-2 border-t border-navy-700">Click any chip to search & delete more.</div>
                  </div>
                </div>
              </button>
            </div>
            <!-- Chips: Red = PII, Green = cleanup -->
            <div id="findings-chips" class="flex flex-wrap items-center gap-1.5"></div>
          </div>
        </div>

        <!-- Action Bar (compact, icon-focused) -->
        <div id="output-header" class="flex-shrink-0 relative border-y border-navy-800/40 bg-navy-950/30">
          <div id="default-header" class="flex items-center justify-between px-4 sm:px-6 py-2.5">
            <!-- File indicator -->
            <div class="flex items-center gap-2 text-xs text-slate-500">
              <div class="w-2 h-2 rounded-full bg-green-500/80 animate-pulse"></div>
              <span id="output-filename" class="font-mono">output.md</span>
            </div>

            <!-- Actions -->
            <div class="flex items-center gap-1 sm:gap-1.5">
              <!-- Highlight -->
              <button id="btn-highlight-changes" disabled class="flex items-center gap-1.5 px-2 sm:px-3 py-1.5 text-xs text-slate-500 hover:text-white hover:bg-white/5 rounded-lg transition-all disabled:opacity-30 disabled:cursor-not-allowed" title="Highlight changes">
                <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 20h9"></path>
                  <path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z"></path>
                </svg>
                <span class="hidden md:inline">Highlight</span>
              </button>

              <!-- Copy -->
              <button id="btn-copy" disabled class="flex items-center gap-1.5 px-2 sm:px-3 py-1.5 text-xs text-slate-500 hover:text-white hover:bg-white/5 rounded-lg transition-all disabled:opacity-30 disabled:cursor-not-allowed" title="Copy to clipboard">
                <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="copy-icon">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
